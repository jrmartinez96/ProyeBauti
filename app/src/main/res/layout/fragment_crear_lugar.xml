<?xml version="1.0" encoding="utf-8"?>


<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".crearLugar">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="@string/casaResourse"
                    android:layout_width="200dp"
                    android:layout_height="200dp" android:id="@+id/buttonCasa"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
                    android:backgroundTint="#83000000"
                    android:background="@color/colorGrey"
                    android:backgroundTintMode="src_over" tools:text="Casa"/>
            <Button
                    android:text="@string/empresaResourse"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/buttonEmpresa"
                    app:layout_constraintStart_toStartOf="@+id/buttonCasa" android:background="@color/colorGrey"
                    android:backgroundTint="#77000000" android:backgroundTintMode="src_over"
                    app:layout_constraintTop_toBottomOf="@+id/buttonCasa" android:layout_marginTop="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>